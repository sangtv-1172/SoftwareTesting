<% provide(:title, t("static_pages.login")) %>
<div class="mx-auto my-3 form_w">
  <h1><%= t "static_pages.login" %></h1>
  <div class="row">
    <div class="col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control my-2" %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control my-2" %>
        <%= f.submit t("static_pages.login"), class: "btn btn-primary my-4" %>
      <% end %>
      <p><%= t "users.new_user" %> <%= link_to t("users.sign_up_n"), signup_path %></p>
    </div>
  </div>
</div>
