<% provide(:title, t("users.change_pass")) %>
<div class="mx-auto my-3 form_w">
  <h1><%= t "users.change_pass" %></h1>
  <div class="row">
    <div class="col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <%= f.label :password %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control my-2", required: true %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control my-2", required: true %>
        <%= f.submit t("users.change_my_pass"), class: "btn btn-primary my-4" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

