<% provide(:title, "Sign up") %>
<div class="mx-auto my-2 form_w">
<h1><%= t "users.sign_up" %></h1>
  <div class="row">
    <div class="col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= render "shared/error_messages" %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control my-2", required: true %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control my-2", required: true %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control my-2", required: true %>
        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control my-2", required: true %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control my-2", required: true %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control my-2", required: true %>
        <%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth, class: "form-control my-2", required: true, min: "1900-1-1", max: "2004-1-1" %>
        <%= f.submit t("users.create_acc"), class: "btn btn-primary my-4" %>
      <% end %>
    </div>
  </div>
</div>
