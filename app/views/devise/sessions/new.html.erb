<% provide(:title, t("static_pages.login")) %>
<div class="mx-auto my-3 form_w">
  <h1><%= t "static_pages.login" %></h1>
  <div class="row">
    <div class="col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-2", required: true %>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control my-2", required: true %>
        <% if devise_mapping.rememberable? %>
          <div class="row">
            <%= f.check_box :remember_me, class: "col-1 my-2" %>
            <%= f.label :remember_me, class: "col my-1" %>
          </div>
        <% end %>
        <%= f.submit t("static_pages.login"), class: "btn btn-primary my-4" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
