<% provide :title, "Room list" %>
<div class="row justify-content-between">
  <h3 class="col-3">Room list</h3>
  <%= link_to "Create a new room", new_admin_room_path, class: "btn btn-primary col-2 p-3 m-2 fw-bold" %>
</div>
<% unless @rooms.any? %>
  <h3 class="text-center"><%= t "admin.not_have_receipt" %></h3>
<% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= sort_link @q, :id %></th>
        <th scope="col"><%= sort_link @q, :name %></th>
        <th scope="col"><%= sort_link @q, :type_room %></th>
        <th scope="col"><%= sort_link @q, :hourly_price %></th>
        <th scope="col"><%= sort_link @q, :day_price %></th>
        <th scope="col"><%= sort_link @q, :monthly_price %></th>
        <th scope="col"><%= sort_link @q, :discount %></th>
        <th scope="col"><%= sort_link @q, :amount_of_people %></th>
        <th scope="col"><%= sort_link @q, :status %></th>
        <th scope="col"><%= sort_link @q, :created_at %></th>
        <th scope="col"><%= "Action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each_with_index do |room, index| %>
        <tr id="receipt-<%= room.id %>">
          <%= render "room", room: room, index: index %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @rooms %>
<% end %>
